<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projekterbaru1"
        tools:targetApi="31">
        <activity
            android:name=".FavProductActivity"
            android:exported="false"
            android:label="@string/title_activity_fav_product"
            android:theme="@style/Theme.Projekterbaru1" />
        <activity
            android:name=".DetailProductActivity"
            android:exported="false"
            android:label="@string/title_activity_detail_product"
            android:theme="@style/Theme.Projekterbaru1" />
        <activity
            android:name=".FlashSaleActivity"
            android:exported="false"
            android:label="@string/title_activity_flash_sale"
            android:theme="@style/Theme.Projekterbaru1" />
        <activity
            android:name=".FlashSale"
            android:exported="false"
            android:label="@string/title_activity_flash_sale"
            android:theme="@style/Theme.Projekterbaru1" />
        <activity
            android:name=".BottomNavbar"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>